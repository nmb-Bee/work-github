<div class="container">
  <div class="row">
    <div class="title">
      <h2>新規会員登録</h2>
    </div>
    <br>
    <%= form_with model: @customer , url: customer_registration_path, local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :姓 %><br />
        <%= f.text_field :family_name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :名 %><br />
        <%= f.text_field :first_name, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :セイ %><br />
        <%= f.text_field :family_name_kana, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :メイ %><br />
        <%= f.text_field :first_name_kana, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :メール %><br />
        <%= f.text_field :email, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :"郵便番号(ハイフン無し)" %><br />
        <%= f.text_field :zipcode, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :住所 %><br />
        <%= f.text_field :address, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :"電話番号(ハイフン無し)" %><br />
        <%= f.text_field :phone_number, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(６文字以上)" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
　　　<br>
      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>
    <div class="title">
      <h3>既に登録済みの方</h3>
    </div>
    <!--< link_to 'こちら', new_customer_session_path %>からログインしてください。-->
    <p><%= render "devise/shared/links" %>からログインしてください。</p>
  </div>


