<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="title">
        <h2>新規会員登録</h2>
      </div>
      <br>
      <%= form_with model: @customer , url: customer_registration_path, local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
        <div class="field col-xs-12">
          <%= f.label :名前, class:"col-xs-2" %>
          <%= f.label :"(姓)", class:"col-xs-1" %>
          <%= f.text_field :family_name, autofocus: true, class:"col-xs-2" %>
          <%= f.label :"(名)", class:"col-xs-1" %>
          <%= f.text_field :first_name, autofocus: true , class:"col-xs-2"%><br>
        </div>

        <div class="field col-xs-12">
          <%= f.label :フリガナ, class:"col-xs-2" %>
          <%= f.label :"(セイ)" , class:"col-xs-1" %>
          <%= f.text_field :family_name_kana, autofocus: true , class:"col-xs-2" %>
          <%= f.label :"(メイ)" , class:"col-xs-1" %>
          <%= f.text_field :first_name_kana, autofocus: true , class:"col-xs-2" %>
        </div>

        <div class="field col-xs-12">
          <%= f.label :メール, class:"col-xs-3" %>
          <%= f.text_field :email, autofocus: true %>
        </div>

        <div class="field col-xs-12">
          <%= f.label :"郵便番号(ハイフン無し)", class:"col-xs-3" %>
          <%= f.text_field :zipcode, autofocus: true %>
        </div>

        <div class="field col-xs-12">
          <%= f.label :住所, class:"col-xs-3" %>
          <%= f.text_field :address, autofocus: true , class:"col-xs-5"%>
        </div>

        <div class="field col-xs-12">
          <%= f.label :"電話番号(ハイフン無し)" , class:"col-xs-3"%>
          <%= f.text_field :phone_number, autofocus: true %>
        </div>

        <div class="field col-xs-12">
          <%= f.label :"パスワード(６文字以上)" , class:"col-xs-3"%>
          <% if @minimum_password_length %>
          <!--<em>(<%#= @minimum_password_length %> characters minimum)</em>-->
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field col-xs-12">
          <%= f.label :"パスワード(確認用)", class:"col-xs-3" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
　　  　<br>
　　  　<div class="field col-xs-12">
        <div class="actions">
          <%= f.submit "新規登録",class: 'btn btn-success btn-lg col-xs-offset-4 col-xs-3' %>
        </div>
        </div>
      <% end %>

        <h3>既に登録済みの方</h3>
        <p class="col-xs-offset-1"><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>

    </div>
  </div>
</div>

