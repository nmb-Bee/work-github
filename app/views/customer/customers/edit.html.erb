<div class="container">
  <div class="row">
    <div class="title">
      <h2>登録情報編集</h2>
    </div>
    <br>
      <%= form_with model:@customer, url:customers_path, local:true do |f| %>
      <div class="customer col-xs-10">
        <div class="form-group col-xs-12">
          <%= f.label :"氏名", class: "col-xs-2 control-label" %>
          <%= f.text_field :family_name, autofocus: true %>
          <%= f.text_field :first_name %>
        </div>
        <br>
        <div class="form-group col-xs-12">
          <%= f.label :"フリガナ", class: "col-xs-2 control-label" %>
          <%= f.text_field :family_name_kana %>
          <%= f.text_field :first_name_kana %>
        </div>
        <br>
        <div class="form-group col-xs-12">
          <%= f.label :"メールアドレス", class: "col-xs-2 control-label" %>
          <%= f.email_field :email, class: "col-xs-6 form-control-static email" %>
        </div>
        <br>
        <div class="form-group col-xs-12">
          <%= f.label :"郵便番号", class: "col-xs-2 control-label" %>
          <%= f.text_field :zipcode %>
        </div>
        <br>
        <div class="form-group col-xs-12">
          <%= f.label :"住所", class: "col-xs-2 control-label" %>
          <%= f.text_field :address, class: "col-xs-6 form-control-static address" %>
        </div>
        <br>
        <div class="form-group col-xs-12">
          <%= f.label :"電話番号", class: "col-xs-2 control-label"%>
          <%= f.text_field :phone_number %>
        </div>
        <br>
        <br>
        <%= f.submit "編集内容を保存する" %>
        <br>
        <br>
        <%= link_to "退会する", quit_customers_path %>
      </div>
      <% end %>
  </div>
</div>