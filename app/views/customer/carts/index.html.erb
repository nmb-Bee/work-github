<h1>ショッピングカート</h1>
<%= button_to "カートを空にする", all_destroy_carts_path, method: :delete , class: "btn btn-sm btn-danger" %>
<table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>

      <tbody>
        <% @carts.each do |cart| %>
          <tr>
            <td><%= attachment_image_tag(cart.item, :image, :fill,500, 250, fallback: "no_image.jpg") %>
            <%= cart.item.name %>
            </td>
            <td>¥<%= tax_price(cart.item.non_taxed_price).floor %></td>
            <td>
              <%= form_with model: cart, local: true do |f| %>
						  <%= f.select :quantity, (1..10).to_a,  class: "form-control product-show-form-control" %>
						  <%= f.submit "変更" %>
					    <% end %>
						</td>
            <td>¥<%= (cart.item.non_taxed_price * cart.quantity*1.1).floor %></td>
            <td><%= link_to "削除する", cart_path(cart), method: :delete %></td>
        <% end %>
      </tbody>
      <td><%= link_to "買い物を続ける",root_path, class: "btn btn-primary"%></td>
      <td><%= link_to "情報入力に進む", new_order_path, class: "btn-lg btn-success" %></td>
      <td>
				¥<%= (@total_price * 1.1).floor.to_s(:delimited) %>
			</td>
</table>