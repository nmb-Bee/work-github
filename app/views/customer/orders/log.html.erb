<div class="container">
    <div class="row">
      <div class="col-xs-9">

        <h1>注文情報確認</h1>

        <table class="table table-hover table-inverse table-bordered">
          <thead>
            <tr class="info">
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
          <% @carts.each do |cart| %>
            <tr>
              <td class="text-left">
                <%= attachment_image_tag(cart.item, :image, size: "60x50", fallback: "no_image.jpg") %>
                <%= cart.item.name %>
              </td>
              <td class="text-right">
                ¥<%= tax_price(cart.item.non_taxed_price).floor.to_s(:delimited) %>
              </td>
              <td class="text-right">
                  <%= cart.quantity %>
              </td>
              <td class="text-right">
                ¥<%= (cart.item.non_taxed_price * cart.quantity*1.1).floor.to_s(:delimited) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>

      <div class="col-xs-3">
      <table class="table table-hover table-condensed table-bordered">
          <tr>
            <th class="info">送料</th>
            <td class="text-right col-xs-5">¥<%= @order.shipfee %></td>
          </tr>
          <tr>
            <th class="info">商品合計</th>
            <td class="text-right">¥<%= ((current_customer.total_price)*1.1).floor.to_s(:delimited) %></td>
          </tr>
          <tr>
            <th class="info">請求金額</th>
           <%# byebug %>
            <td class="text-right">¥<%= ((current_customer.total_price)*1.1+@order.shipfee).floor.to_s(:delimited) %></td>
          </tr>
      </table>
    </div>
      <h2>支払方法</h2>
         <td class="text-left">
            <%= @order.payment %>
         </td>
      <h2>お届け先</h2>
        <div><%= @order.zipcode %>
        <%= @order.address %></div>
        <div><%= @order.name %></div>


    <div class ="col-xs-11">
      <%= form_with model: @order, url: thanks_orders_path, method: :get, local: true do |f| %>
        <%= f.hidden_field :zipcode %>
        <%= f.hidden_field :address %>
        <%= f.hidden_field :name %>
        <%= f.hidden_field :payment %>
        <%= f.hidden_field :total_price %>
        <%= f.submit "購入を確定する", class: "btn btn-warning center-block col-xs-5" %>
      <% end %>