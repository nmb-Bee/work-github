<div class="container">
    <div class="row">
      <div class="col-xs-12">

         <div class="title">
            <h2>注文情報入力</h2>
         </div>
        
        <%= form_with url:log_orders_path, method: :get, local: true do | f | %>
           <h4><strong>支払方法</strong></h4>
              <p>
              <%= f.radio_button :payment_method, "クレジットカード", checked: true %>
              クレジットカード
              </p>
              <p>
              <%= f.radio_button :payment_method, "銀行振込" %>
              銀行振込
              </p>

          <h4><strong>お届け先</strong></h4>
               <p><%= f.radio_button :address_option, "address", checked: true  %>
                 ご自身の住所
                  <div><%= current_customer.zipcode %><%= current_customer.address %></div>
                  <div><%= current_customer.family_name %><%= current_customer.first_name %></div>

               </p>
               <p><%= f.radio_button :address_option, "addresses" %>
                 登録済住所から選択
                 <%= f.collection_select :addresses, current_customer.addresses, :id, :name, :prompt =>'---選択してください---' %>
               </p>
               <p><%= f.radio_button :address_option, "new_address" %>
                 新しいお届け先
                    <div class="field form-group col-xs-11">
                      <%= f.label :"郵便番号(ハイフンなし)", class: "col-sm-4 control-label" %>
                      <%= f.text_field :zipcode, class: "col-sm-3" %>
                    </div>
                    <div class="field form-group col-xs-11">
                      <%= f.label :"住所", class: "col-sm-4 control-label" %>
                      <%= f.text_field :address, class: "col-sm-8" %>
                    </div>
                    <div class="field form-group col-xs-11">
                      <%= f.label :"宛名", class: "col-sm-4 control-label" %>
                      <%= f.text_field :name, class: "col-sm-4" %>
                    </div>
                        <%= f.submit "確認画面に進む", class:"btn-lg btn-success col-xs-offset-5" %>
                    <% end %>
                  </div>
               </p>

         </div>
    </div>