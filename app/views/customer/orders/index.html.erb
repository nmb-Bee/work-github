<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="title">
	          <h2>注文履歴一覧</h2>
	        </div>
			<% if @order.present? %>
			
			<div class="orders-table">
				<table class="table">
					<thead>
						<tr class="active">
							<th>注文日</th>
							<th>配送先</th>
							<th>注文商品</th>
							<th>支払金額</th>
							<th>ステータス</th>
							<th>注文詳細</th>
						</tr>
					</thead>
					<tbody class="order-items">
					  <tr>
						 <% @order.each do |order| %>
						 	<td><%= order.created_at %></td>
						 	
			                <td class="text-left">
		    		          <%= order.zipcode %><br>
		    		          <%= order.address %><br>
		    		          <%= order.name %>
		    		        </td>
			               <td>
			                <% order.order_items.each do |order_item| %>
	    		          	<%= order_item.item.name %><br>
		    		         <% end %>
		    		        </td>
		    		        <td class="text-right">
		    		          <%= order.total_price.to_s(:delimited) %>円
		    		        </td>
		    		        <td>
		    		          <%= order.order_status %>
		    		        </td>
		         	        <td>
		       	              <%= link_to "注文詳細", order_path(order), class: "glyphicon glyphicon-zoom-in btn btn-success" %>
		       	            </td>
		              </tr>
				          <% end %>
					</tbody>
				</table>
			</div>
			  <% else %>
		        <p>注文履歴がありません。</p>
		      <% end %>
		</div>
	</div>
</div>