<div class="container">
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<h2>注文履歴一覧</h2>
			<div class="orders-table">
				<table class="table">
					<thead>
						<tr class="active">
							<th>注文日</th>
							<th>配送先</th>
							<th>注文商品</th>
							<th>支払金額</th>
							<th>ステータス</th>
							<th>注文詳細</th>
						</tr>
					</thead>
					<tbody class="order-items">
						<% @orders.each do |order| %>
			                <%= link_to admin_order_path(order) do %>
			                  <%= order.created_at %>
			                <% end %>
			                <%= family_name(order.customer) %>
			                <%= order.order_items.count %>
			                <%= order.order_status %>
			          <% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>