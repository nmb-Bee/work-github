<div class="container">
	<div class="row">
		<div class="order-show col-xs-10 col-xs-offset-1">
			<div class="title">
	          <h2>注文履歴詳細</h2>
	        </div>

			<div class="row">
				<!-- 注文情報 -->
				<div class=" order-info col-xs-7">
					<h3>注文情報</h3>
					<div class="order-table">
						<table class="table">
							<tbody>
								<tr>
									<th class="active">注文日</th>
									<td><%= @order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
								</tr>
								<tr>
									<th class="active">配送先</th>
									<td>
									  <%= @order.zipcode %><br>
									  <%= @order.address %><br>
				    		    	  <%= @order.name %>
									</td>
								</tr>
								<tr>
									<th class="active">支払方法</th>
									<td><%= @order.payment %></td>
								</tr>
								<tr>
									<th class="active">ステータス</th>
									<td> <%= @order.order_status %></td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				<!-- 請求情報 -->
				<div class="col-xs-3">
					<h3>請求情報</h3>
					<div>
						<table class="table">
							<tbody>
								<tr>
									<th class="active">商品合計</th>
									<td class="text-right"> ¥<%= (@order.sub_price*1.10).floor.to_s(:delimited) %></td>
								</tr>
								<tr>
									<th class="active">配送料</th>
									<td class="text-right">¥<%= @order.shipfee %></td>
								</tr>
								<tr>
									<th class="active">ご請求額</th>
									<td class="text-right">¥<%= @order.total_price.floor.to_s(:delimited) %></td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
			<!-- 注文内容 -->
			<div class="row">
				<div class="col-xs-8">
					<h3>注文内容</h3>
					<div>
						<table class="table">
							<thead>
								<tr>
									<th class="active">商品</th>
									<th class="active">単価（税込）</th>
									<th class="active">個数</th>
									<th class="active">小計</th>
								</tr>
							</thead>
							<tbody>
								<% @order.order_items.each do |order_item| %>
								<tr>
	    		          			<td><%= order_item.item.name %></td>
									<td class>¥<%= (order_item.purchase_price*1.10).floor.to_s(:delimited) %></td>
									<td class><%= order_item.quantity %></td>
									<td class>¥<%= (order_item.purchase_price*1.10*order_item.quantity).floor.to_s(:delimited) %></td>
								</tr>
								<% end %>

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>