<div class="container">
	<div class="row">
		<div class="order-show col-xs-10 col-xs-offset-1">
			<h2>注文履歴詳細</h2>
			<div class="row">
				<!-- 注文情報 -->
				<div class=" order-info col-xs-7">
					<h3>注文情報</h3>
					<div class="order-table">
						<table class="table">
							<tbody>
								<tr>
									<th class="active">注文日</th>
									<td><%= @order.created_at %></td>
								</tr>
								<tr>
									<th class="active">配送先</th>
									<td>
									  <%= current_customer.zipcode %><br>
									  <%= current_customer.address %><br>
				    		          <%= current_customer.family_name %><%= current_customer.first_name %>
									</td>
								</tr>
								<tr>
									<th class="active">支払方法</th>
									<td><%= @order.payment %></td>
								</tr>
								<tr>
									<th class="active">ステータス</th>
									<td> <%= @order.order_status %></td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
				<!-- 請求情報 -->
				<div class="col-xs-3">
					<h3>請求情報</h3>
					<div>
						<table class="table">
							<tbody>
								<tr>
									<th class="active">商品合計</th>
									<td class="text-right"> ¥<%= ((current_customer.total_price)*1.1).floor.to_s(:delimited) %></td>
								</tr>
								<tr>
									<th class="active">配送料</th>
									<td class="text-right"><%= @order.shipfee %></td>
								</tr>
								<tr>
									<th class="active">ご請求額</th>
									<td class="text-right">¥<%= ((current_customer.total_price)*1.1+@order.shipfee).floor.to_s(:delimited) %></td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
			<!-- 注文内容 -->
			<div class="row">
				<div class="col-xs-8">
					<h3>注文内容</h3>
					<div>
						<table class="table">
							<thead>
								<tr>
									<th class="active">商品</th>
									<th class="active">単価（税込）</th>
									<th class="active">個数</th>
									<th class="active">小計</th>
								</tr>
							</thead>
							<tbody>
								<% @carts.each do |cart| %>
								<tr>
									<td><%= cart.item.name %></td>
									<td class="text-right"><%= tax_price(cart.items.non_taxed_price).to_s(:delimited) %></td>
									<td class="text-right"><%= cart.quantity %></td>
									<td class="text-right"><%= (cart.item.non_taxed_price * cart.quantity*1.1).floor.to_s(:delimited) %></td>
								</tr>

							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>