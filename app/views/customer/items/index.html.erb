<div class="container">
  <div class="row">

    <div class="genreback">
      <div class="col-xs-3">
        <h3>ジャンル検索</h3>
        <% @genres.each do |genre| %>
          <table>
            <tbody>
              <!--有効のみ表示したい-->
              <td><%= link_to genre.name %></td><br>
            </tbody>
          </table>
        <% end %>
      </div>
    </div>

    <h1>商品一覧 (全<%= @items.total_count %>件)</h1>
    <br>
    <div class="col-xs-9">

   <div class="img-box">
      <% @items.each do |item| %>

          <%= link_to attachment_image_tag(item, :image, :fill, 100, 100, fallback: "no_image.jpg"), item_path(item.id) %>
          <%= item.name %>
          ￥<%= (item.non_taxed_price*1.1).floor %>
      <% end %>
   </div>

      </br>
    <%= paginate @items %>
  </div>
 </div>
</div>