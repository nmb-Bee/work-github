<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="title">
        <h2> 配送先編集 </h2>
      </div>
      <br>
      <%= form_with(model: @address, url:address_path, local: true ,method: :patch) do |f| %>
        <div class="addres col-xs-10">
          <div class="form-group col-xs-12">
            <%= f.label :"郵便番号（ハイフンなし）", class: "col-xs-3 control-label" %>
            <%= f.text_field :zipcode, class: "col-xs-4 form-control-atatic zipcode" %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"住所", class: "col-xs-3 control-label" %>
            <%= f.text_field :address, class: "col-xs-7 form-control-atatic addres" %>
          </div>
          <div class="form-group col-xs-12">
              <%= f.label :"宛名", class: "col-xs-3 control-label" %>
              <%= f.text_field :name, class: "col-xs-4 form-control-atatic name" %>
          </div>
          <div class="form-group col-xs-12">
              <%= f.submit '編集する', class: "col-xs-2 btn btn-primary btn-lg pull-right" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
