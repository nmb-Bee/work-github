<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="title">
        <h2>配送先登録/一覧</h2>
      </div>
      <br>
      <%= form_with(model: @address, :url => {:controller => "customer/addresses"}, method: :post, local: true ) do |f| %>
        <div class="addres col-xs-10">
          <div class="form-group col-xs-12">
            <%= f.label :"郵便番号（ハイフンなし）", class: "col-xs-3 control-label" %>
            <%= f.text_field :zipcode, class: "col-xs-4 form-control-atatic zipcode" %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"住所", class: "col-xs-3 control-label" %>
            <%= f.text_field :address, class: "col-xs-7 form-control-static address"%>
          </div>
          <div class="form-group col-xs-12">
            <%= f.label :"宛名", class: "col-xs-3 control-label" %>
            <%= f.text_field :name, class: "col-xs-4 form-control-static name" %>
          </div>
          <div class="form-group col-xs-12">
            <%= f.submit '登録する', class: "col-xs-2 pull-right btn-lg btn-success" %>
          </div>
        </div>
      <% end %>
  　</div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <% if @addresses.present? %>
        <table border="1">
          <thead>
            <tr bgcolor="#dcdcdc">
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
            <tr>
              <td width="10%">
                <%= address.zipcode %>
              </td>
              <td width="40%">
                <%= address.address %>
              </td>
              <td width="15%">
                <%= address.name %>
              </td>
              <td width="20%">
                <%= link_to "編集する",edit_address_path(address), class: "glyphicon btn-sm btn-primary" %>
                <%= link_to "削除する",address_path(address), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, remote: true, class: "glyphicon btn-sm btn-danger" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>
    </div>
  </div>
</div>
