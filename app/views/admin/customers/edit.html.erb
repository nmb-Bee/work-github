<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="Title">
        <h2><%= @customer.family_name %><%= @customer.first_name %>さんの会員情報編集</h2>
      </div>
    </div>
  </div>
  <br>
  <%= form_with model:@customer, url:admin_customer_path, local:true do |f| %>
    <div class="row">
      <div class="col-xs-10">
        <table class="table table-bordered">
          <tbody>
            <tr>
              <th class="info col-xs-2">顧客ID</th>
              <td>
                <%= @customer.id %>
              </td>
            </tr>
            <tr>
              <th class="info col-xs-2">
                <%= f.label :"氏名" %>
              </th>
              <td>
                <%= f.text_field :family_name, autofocus: true %>
                <%= f.text_field :first_name %>
              </td>
            </tr>
            <tr>
              <th class="info col-xs-2">
                <%= f.label :"フリガナ" %>
              </th>
              <td>
                <%= f.text_field :family_name_kana %>
                <%= f.text_field :first_name_kana %>
              </td>
            </tr>
            <tr>
              <th class="info col-xs-2">
                <%= f.label :"メールアドレス" %>
              </th>
              <td>
                <%= f.email_field :email, class: "col-xs-7 form-control-static email" %>
              </td>
            </tr>
            <tr>
              <th class="info col-xs-2">
                <%= f.label :"郵便番号" %>
              </th>
              <td>
                <%= f.text_field :zipcode %>
              </td>
            </tr>
            <tr>
              <th class="info col-xs-2">
                <%= f.label :"住所" %>
              </th>
              <td>
                <%= f.text_field :address, class: "col-xs-7 form-control-static address" %>
              </td>
            </tr>
            <tr>
            <th class="info col-xs-2">
              <%= f.label :"電話番号" %>
            </th>
            <td>
              <%= f.text_field :phone_number %>
            </td>
            </tr>
            <tr>
              <th class="info col-xs-2"></th>
              <td>
                有効
                <%= f.radio_button :is_deleted, :false %>
                退会済み
                <%= f.radio_button :is_deleted, :true %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="form-group col-xs-12">
      <%= f.submit "変更を保存する", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
