
<h1><%= @customer.family_name %><%= @customer.first_name %>さんの会員情報編集</h1>
<%= form_with model:@customer, url:admin_customer_path, local:true do |f| %>
    顧客ID<%= @customer.id %>
    <%= f.label :"氏名" %>
    <%= f.text_field :family_name, autofocus: true %>
    <%= f.text_field :first_name %>
    <%= f.label :"フリガナ" %>
    <%= f.text_field :family_name_kana %>
    <%= f.text_field :first_name_kana %>
    <%= f.label :"メールアドレス" %>
    <%= f.email_field :email %>
    <%= f.label :"郵便番号" %>
    <%= f.text_field :zipcode %>
    <%= f.label :住所 %>
    <%= f.text_field :address %>
    <%= f.label :電話番号 %>
    <%= f.text_field :phone_number %>
    有効
    <%= f.radio_button :is_deleted, :false %>
    退会済み
    <%= f.radio_button :is_deleted, :true %>
    <%= f.submit "変更を保存する" %>
<% end %>