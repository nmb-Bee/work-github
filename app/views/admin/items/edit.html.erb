

<h1>商品編集</h1>

<%= form_with model:item, local:true do |f| %>

　<%= f.attachment_field :image %>

  <div class="field row">
    <label class="control-label sr-only">商品名</label>
    <%= f.text_field :name, class: 'col-xs-12 book_title' %>
  </div>

  <div class="field row">
    <<label class="control-label sr-only">商品説明</label>
    <%= f.text_area :explanation, class: 'col-xs-12 book_body' %>
  </div>
  <!--ジャンルネームを持ってくる。サーチコントローラーの作成？-->
  <div><%#= f.select :name, options_for_select([['---選択してください---', ''], ['User', '1'], ['Book', '2']]) %></div>
  
  <div>税抜き価格</div>
  <div>円</div>
  

  <div class="actions row">
    <label>新規登録</label>
    <%= f.submit class: 'btn btn-primary col-xs-12' %>
  </div>
<% end %>
