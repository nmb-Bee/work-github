<div class="container">
  <h1>注文履歴詳細</h1>
  <div class="row">
    <div class="col-xs-12">
      <div class="field">
        <div class="col-xs-4">購入者</div>
        <div class="col-xs-8">
          <%= @order.family_name %>
        </div>
      </div>
      <div class="field">
        <div class="col-xs-4">配送先</div>
        <div class="col-xs-8">
          <%= zipcode(@order), address(@order), name(@order) %>
        </div>
      </div>
      <div class="field">
        <div class="col-xs-8">支払い方法</div>
        <div class="col-xs-8">
          <%= @order.payment_method %>
        </div>
      </div>
      <%= form_with(@order, url:admin_order_path, method: :patch, local: true ) do |f| %>
          <div class="col-xs-4">注文ステータス</div>
          <div class="col-xs-6">
            <%= f.select order_status, oder.order_status %>
            <%= f.submit '更新', class: "btn btn-primary" %>
          </div>
      <% end %>
    </div>
  </div>

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th>制作ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td>¥</td>
          <td><%= order_item.count %></td>
          <tb>¥<%= price(order_item).to_s %></tb>
            <%= form_with(order_item, url: admin_order_item_path), method: :patch) do |f| %>
              <tb><%= f.submit '更新' %></tb>
            <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>