<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="title">
        <h2>注文履歴一覧</h2>
      </div>
      <br>
<%# if @orders.present? %>
      <div class="orders-table">
        <table class="table">
          <thead>
            <tr class="active">
              <th>購入日時</th>
              <th>購入者</th>
              <th>注文個数</th>
              <th>注文ステータス</th>
            </tr>
          </thead>
          <tbody　 class="order">
            <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order) do %>
                <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
                <% end %>
              </td>
              <td>
                <%= order.name %>
              </td>
                <td>
                  <%#= order. %>
                </td>
              <td>
                <%= order.order_status %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <%# else %>
		    <!--<p>注文履歴がありません。</p>-->
    </div>
  </div>
</div>

